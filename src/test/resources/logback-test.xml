<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
          <Pattern>
              %date %highlight(%level) [%thread] %logger{10} %green([%file:%line]) %msg%n
          </Pattern>
      </encoder>
  </appender>

  <root level="debug">
      <appender-ref ref="STDOUT" />
  </root>

</configuration>
